<style>
.smallbox {
     float: left;
     width: 45%;
     padding: 1px;
     box-sizing: border-box;
}
.holeCasing {
     float: left;
     width: 60%;
     box-sizing: border-box;
}

</style>



<div class="holeCasing">

          <h3><u>Studienarm</u></h3>
          <%= form_for @Study_arm do |sa| %>
          <% @skc = current_skc %>
          <%= sa.hidden_field :updated_by , :value => @skc.email %>

          <%= sa.hidden_field :iclassification , :value => 'keine' %>
          <%= sa.hidden_field :updated_at , :value => Time.now %> 
          <div class="smallbox">Studienbezeichnung</div><div class="smallbox"> <%=  sa.collection_select(:stud_name , @studie , :bezeichnung  , :bezeichnung, selected: @Study_arm.stud_name) %> </div>
          <div class="smallbox">Studienarmbezeichnung</div><div class="smallbox"><%= sa.text_field :bezeichnung %></div>
          <div class="smallbox">Kategorie</div><div class="smallbox"><%= sa.select(:controlled_intervention , options_for_select([['Kontrollarm','Kontrollarm'],['Interventionsarm','Interventionsarm']], selected: @Study_arm.controlled_intervention)) %></div>
          <div class="smallbox">Patientenanzahl</div><div class="smallbox"><%= sa.number_field :number_patient %></div>

          <div class="smallbox">Behandlungslänge nicht zutreffend</div><div class="smallbox"><%= sa.check_box :zutreffend %></div>
          <div class="smallbox">Behandlungslänge pro Patient</div><div class="smallbox"><%= sa.select(:behandlungsnummer , options_for_select((1..999).step(1), selected: @Study_arm.behandlungsnummer)) %><%= sa.select(:behandlungstyp, options_for_select([['Tage','Tage'],['Wochen','Wochen'],['Monate','Monate'],['Jahre','Jahre']], selected: @Study_arm.behandlungstyp)) %></div>




          <div class="smallbox">Medikation</div><div class="smallbox"><%= sa.text_field :medication %></div>
          <div class="smallbox">Dosierung</div><div class="smallbox"><%= sa.text_area :dosing %></div>
          <div class="smallbox">Art der Verabreichung
                          <span title="Bei der Auswahl 'Mehrere' bitte genauer in der Anmerkung angeben">
                  <img src="https://i.ibb.co/jf8KNrr/iconfinder-Info-132643.png"/>
                  </span>

	</div><div class="smallbox"><%= sa.select(:verabreichnung , options_for_select([['Oral','Oral'],['Injektion','Injektion'],['Infusion/Oral','Infusion/Oral'],['Infusion','Infusion'],['intrazerebroventrikuläre Infusion','intrazerebroventrikuläre Infusion'],['Instillation','Instillation'],['Intravenös','Intravenös'],['Subkutan','Subkutan'],['Topisch','Topisch'],['Inhalation','Inhalation'],['Mehrere','Mehrere'],['Nicht vorhanden','Nicht vorhanden']], selected: @Study_arm.verabreichnung)) %></div>
          <div class="smallbox">Anmerkung</div><div class="smallbox"> <%= sa.text_area :anmerkung %></div> <br />
          <%= sa.submit "save study arm"%>
          <% end %>
</div>
